<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".BoardFragment">


        <View
            android:id="@+id/left_vertical"

            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_0_0"
            app:layout_constraintRight_toLeftOf="@id/text_0_1"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/right_vertical"

            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_0_1"
            app:layout_constraintRight_toLeftOf="@id/text_0_2"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/top_horizontal"

            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/black"

            app:layout_constraintBottom_toTopOf="@id/text_1_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_0_1" />


        <View
            android:id="@+id/bottom_horizontal"

            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/black"

            app:layout_constraintBottom_toTopOf="@id/text_2_1"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_1_1" />

        <Button
            android:id="@+id/text_0_0"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toTopOf="@id/top_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_0_1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/text_0_1"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toTopOf="@id/top_horizontal"
            app:layout_constraintLeft_toRightOf="@id/text_0_0"
            app:layout_constraintRight_toLeftOf="@id/text_0_2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/text_0_2"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toTopOf="@id/top_horizontal"
            app:layout_constraintLeft_toRightOf="@id/text_0_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/text_1_0"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toTopOf="@id/bottom_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/left_vertical"
            app:layout_constraintTop_toBottomOf="@id/top_horizontal" />

        <Button
            android:id="@+id/text_1_1"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toTopOf="@id/bottom_horizontal"
            app:layout_constraintLeft_toRightOf="@id/text_1_0"
            app:layout_constraintRight_toLeftOf="@id/text_1_2"
            app:layout_constraintTop_toBottomOf="@id/top_horizontal" />

        <Button
            android:id="@+id/text_1_2"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toTopOf="@id/bottom_horizontal"
            app:layout_constraintLeft_toRightOf="@id/text_1_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_horizontal" />

        <Button
            android:id="@+id/text_2_0"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_2_1"
            app:layout_constraintTop_toBottomOf="@id/bottom_horizontal" />

        <Button
            android:id="@+id/text_2_1"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_2_0"
            app:layout_constraintRight_toLeftOf="@id/text_2_2"
            app:layout_constraintTop_toBottomOf="@id/bottom_horizontal" />

        <Button
            android:id="@+id/text_2_2"

            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="X"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_2_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>