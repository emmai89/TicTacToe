<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardFragment">

        <Button
            android:id="@+id/text_0_0"
            android:background="@drawable/btn_shape_rec"
            android:text="X"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toTopOf="@id/text_1_0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_0_1"
            app:layout_constraintTop_toTopOf="parent"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/text_0_1"

            android:background="@drawable/btn_shape_rec"
            android:text="X"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toTopOf="@id/text_1_1"
            app:layout_constraintLeft_toRightOf="@id/text_0_0"
            app:layout_constraintRight_toLeftOf="@id/text_0_2"
            app:layout_constraintTop_toTopOf="parent"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/text_0_2"

            android:background="@drawable/btn_shape_rec"
            android:text="X"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toTopOf="@id/text_1_2"
            app:layout_constraintLeft_toRightOf="@id/text_0_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            style="?android:attr/buttonBarButtonStyle" />


        <Button
            android:id="@+id/text_1_0"

            android:background="@drawable/btn_shape_rec"
            android:text="X"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toTopOf="@id/text_2_0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_1_1"
            app:layout_constraintTop_toBottomOf="@id/text_0_0"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/text_1_1"

            android:background="@drawable/btn_shape_rec"
            android:text="X"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toTopOf="@id/text_2_1"
            app:layout_constraintLeft_toRightOf="@id/text_1_0"
            app:layout_constraintRight_toLeftOf="@id/text_1_2"
            app:layout_constraintTop_toBottomOf="@id/text_0_1"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/text_1_2"

            android:background="@drawable/btn_shape_rec"
            android:text="X"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/text_0_2"
            app:layout_constraintBottom_toTopOf="@id/text_2_2"
            app:layout_constraintLeft_toRightOf="@id/text_1_1"
            app:layout_constraintRight_toRightOf="parent"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/text_2_0"

            android:background="@drawable/btn_shape_rec"
            android:text="X"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/text_1_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_2_1"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/text_2_1"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@drawable/btn_shape_rec"
            android:text="X"

            app:layout_constraintTop_toBottomOf="@id/text_1_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_2_0"
            app:layout_constraintRight_toLeftOf="@id/text_2_2"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/text_2_2"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@drawable/btn_shape_rec"
            android:text="X"


            app:layout_constraintTop_toBottomOf="@id/text_1_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_2_1"
            app:layout_constraintRight_toRightOf="parent"

            style="?android:attr/buttonBarButtonStyle" />

        <ImageView
            android:id="@+id/left_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:rotation="90"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_0_0"
            app:layout_constraintRight_toLeftOf="@id/text_0_1"
            android:src="@drawable/line_shape"/>

        <ImageView
            android:id="@+id/right_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:rotation="90"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_0_1"
            app:layout_constraintRight_toLeftOf="@id/text_0_2"
            android:src="@drawable/line_shape"/>

        <ImageView
            android:id="@+id/top_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/text_0_1"
            app:layout_constraintBottom_toTopOf="@id/text_1_1"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:src="@drawable/line_shape"/>


        <ImageView
            android:id="@+id/bottom_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/text_1_1"
            app:layout_constraintBottom_toTopOf="@id/text_2_1"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:src="@drawable/line_shape"/>

</androidx.constraintlayout.widget.ConstraintLayout>